<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hb.platform.unic.rbac.mapper.ISysUserMapper">

    <!--字段映射-->
    <resultMap id="sysUserMap" type="com.hb.platform.unic.rbac.dobj.SysUserDO">
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
        <result column="mobile" property="mobile"/>
        <result column="sex" property="sex"/>
        <result column="email" property="email"/>
        <result column="id" property="id"/>
        <result column="creator" property="creator"/>
        <result column="create_time" property="createTime"/>
        <result column="updator" property="updator"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_valid" property="isValid"/>
        <result column="parent_id" property="parentId"/>
        <result column="tenant_id" property="tenantId"/>
    </resultMap>

    <!--查询单个-->
    <select id="selectById" resultMap="sysUserMap">
        select * from sys_user where id = #{id}
    </select>

    <!--查询集合-->
    <select id="selectList" resultMap="sysUserMap">
        select * from sys_user
        <include refid="whereCondition"/>
        order by update_time desc
    </select>

    <!--查询总条数-->
    <select id="selectCount" resultType="java.lang.Long">
        select count(*) from sys_user
        <include refid="whereCondition"/>
    </select>

    <!--分页条件查询-->
    <select id="selectPages" resultMap="sysUserMap">
        select * from sys_user
        <include refid="whereCondition"/>
        order by update_time desc
        limit #{pc.startIndex}, #{pc.pageSize}
    </select>

    <!--通过id集合查询-->
    <select id="selectByIdSet" resultMap="sysUserMap">
        select * from sys_user
        where id in
        <foreach collection="idSet" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        <include refid="whereCondition"/>
    </select>

    <!--通过主键修改-->
    <update id="updateById">
        update sys_user
        <include refid="updateFields"/>
        where id = #{qc.id}
    </update>

    <!--通过主键物理删除-->
    <update id="deleteById">
        update sys_user set is_valid = 0 where id = #{id}
    </update>

    <!--选择性的新增-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into sys_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="qc.userName != null and qc.userName != ''">
                user_name,
            </if>
            <if test="qc.password != null and qc.password != ''">
                password,
            </if>
            <if test="qc.mobile != null and qc.mobile != ''">
                mobile,
            </if>
            <if test="qc.sex != null and qc.sex != ''">
                sex,
            </if>
            <if test="qc.email != null and qc.email != ''">
                email,
            </if>
            <if test="qc.id != null">
                id,
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                creator,
            </if>
            <if test="qc.createTime != null">
                create_time,
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                updator,
            </if>
            <if test="qc.updateTime != null">
                update_time,
            </if>
            <if test="qc.isValid != null">
                is_valid,
            </if>
            <if test="qc.parentId != null">
                parent_id,
            </if>
            <if test="qc.tenantId != null">
                tenant_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="qc.userName != null and qc.userName != ''">
                #{qc.userName},
            </if>
            <if test="qc.password != null and qc.password != ''">
                #{qc.password},
            </if>
            <if test="qc.mobile != null and qc.mobile != ''">
                #{qc.mobile},
            </if>
            <if test="qc.sex != null and qc.sex != ''">
                #{qc.sex},
            </if>
            <if test="qc.email != null and qc.email != ''">
                #{qc.email},
            </if>
            <if test="qc.id != null">
                #{qc.id},
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                #{qc.creator},
            </if>
            <if test="qc.createTime != null">
                #{qc.createTime},
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                #{qc.updator},
            </if>
            <if test="qc.updateTime != null">
                #{qc.updateTime},
            </if>
            <if test="qc.isValid != null">
                #{qc.isValid},
            </if>
            <if test="qc.parentId != null">
                #{qc.parentId},
            </if>
            <if test="qc.tenantId != null">
                #{qc.tenantId},
            </if>
        </trim>
    </insert>

    <!--条件查询-->
    <sql id="whereCondition">
        <where>
            is_valid = 1
            <if test="qc.userName != null and qc.userName != ''">
                and user_name = #{qc.userName}
            </if>
            <if test="qc.password != null and qc.password != ''">
                and password = #{qc.password}
            </if>
            <if test="qc.mobile != null and qc.mobile != ''">
                and mobile = #{qc.mobile}
            </if>
            <if test="qc.sex != null and qc.sex != ''">
                and sex = #{qc.sex}
            </if>
            <if test="qc.email != null and qc.email != ''">
                and email = #{qc.email}
            </if>
            <if test="qc.id != null">
                and id = #{qc.id}
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                and creator = #{qc.creator}
            </if>
            <if test="qc.createTime != null">
                and create_time = #{qc.createTime}
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                and updator = #{qc.updator}
            </if>
            <if test="qc.updateTime != null">
                and update_time = #{qc.updateTime}
            </if>
            <if test="qc.isValid != null">
                and is_valid = #{qc.isValid}
            </if>
            <if test="qc.parentId != null">
                and parent_id = #{qc.parentId}
            </if>
            <if test="qc.tenantId != null">
                and tenant_id = #{qc.tenantId}
            </if>
        </where>
    </sql>

    <!--更新字段sql-->
    <sql id="updateFields">
        <set>
            <if test="qc.userName != null and qc.userName != ''">
                user_name = #{qc.userName},
            </if>
            <if test="qc.password != null and qc.password != ''">
                password = #{qc.password},
            </if>
            <if test="qc.mobile != null and qc.mobile != ''">
                mobile = #{qc.mobile},
            </if>
            <if test="qc.sex != null and qc.sex != ''">
                sex = #{qc.sex},
            </if>
            <if test="qc.email != null and qc.email != ''">
                email = #{qc.email},
            </if>
            <if test="qc.id != null">
                id = #{qc.id},
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                creator = #{qc.creator},
            </if>
            <if test="qc.createTime != null">
                create_time = #{qc.createTime},
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                updator = #{qc.updator},
            </if>
            <if test="qc.updateTime != null">
                update_time = #{qc.updateTime},
            </if>
            <if test="qc.isValid != null">
                is_valid = #{qc.isValid},
            </if>
            <if test="qc.parentId != null">
                parent_id = #{qc.parentId},
            </if>
            <if test="qc.tenantId != null">
                tenant_id = #{qc.tenantId},
            </if>
        </set>
    </sql>

</mapper>
