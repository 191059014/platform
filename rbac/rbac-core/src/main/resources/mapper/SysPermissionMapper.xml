<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hb.platform.rbac.core.dao.mapper.ISysPermissionMapper">

    <!--字段映射-->
    <resultMap id="sysPermissionMap" type="com.hb.platform.rbac.core.dao.dobj.SysPermissionDO">
        <result column="permission_name" property="permissionName"/>
        <result column="resource_type" property="resourceType"/>
        <result column="permission_value" property="permissionValue"/>
        <result column="icon" property="icon"/>
        <result column="url" property="url"/>
        <result column="id" property="id"/>
        <result column="creator" property="creator"/>
        <result column="create_time" property="createTime"/>
        <result column="updator" property="updator"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_valid" property="isValid"/>
    </resultMap>

    <!--查询单个-->
    <select id="selectById" resultMap="sysPermissionMap">
        select * from sys_permission where id = #{id}
    </select>

    <!--查询集合-->
    <select id="selectList" resultMap="sysPermissionMap">
        select * from sys_permission
        <include refid="whereCondition"/>
        order by update_time desc
    </select>

    <!--查询总条数-->
    <select id="selectCount" resultType="java.lang.Long">
        select count(*) from sys_permission
        <include refid="whereCondition"/>
    </select>

    <!--分页条件查询-->
    <select id="selectPages" resultMap="sysPermissionMap">
        select * from sys_permission
        <include refid="whereCondition"/>
        order by update_time desc
        limit #{pc.startIndex}, #{pc.pageSize}
    </select>

    <!--通过id集合查询-->
    <select id="selectByIdSet" resultMap="sysPermissionMap">
        select * from sys_permission
        where id in
        <foreach collection="idSet" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        <include refid="whereCondition"/>
    </select>

    <!--通过主键修改-->
    <update id="updateById">
        update sys_permission
        <include refid="updateFields"/>
        where id = #{qc.id}
    </update>

    <!--通过主键物理删除-->
    <update id="deleteById">
        update sys_permission set is_valid = 0 where id = #{id}
    </update>

    <!--选择性的新增-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into sys_permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="qc.permissionName != null and qc.permissionName != ''">
                permission_name,
            </if>
            <if test="qc.resourceType != null and qc.resourceType != ''">
                resource_type,
            </if>
            <if test="qc.permissionValue != null and qc.permissionValue != ''">
                permission_value,
            </if>
            <if test="qc.icon != null and qc.icon != ''">
                icon,
            </if>
            <if test="qc.url != null and qc.url != ''">
                url,
            </if>
            <if test="qc.id != null">
                id,
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                creator,
            </if>
            <if test="qc.createTime != null">
                create_time,
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                updator,
            </if>
            <if test="qc.updateTime != null">
                update_time,
            </if>
            <if test="qc.isValid != null">
                is_valid,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="qc.permissionName != null and qc.permissionName != ''">
                #{qc.permissionName},
            </if>
            <if test="qc.resourceType != null and qc.resourceType != ''">
                #{qc.resourceType},
            </if>
            <if test="qc.permissionValue != null and qc.permissionValue != ''">
                #{qc.permissionValue},
            </if>
            <if test="qc.icon != null and qc.icon != ''">
                #{qc.icon},
            </if>
            <if test="qc.url != null and qc.url != ''">
                #{qc.url},
            </if>
            <if test="qc.id != null">
                #{qc.id},
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                #{qc.creator},
            </if>
            <if test="qc.createTime != null">
                #{qc.createTime},
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                #{qc.updator},
            </if>
            <if test="qc.updateTime != null">
                #{qc.updateTime},
            </if>
            <if test="qc.isValid != null">
                #{qc.isValid},
            </if>
        </trim>
    </insert>

    <!--条件查询-->
    <sql id="whereCondition">
        <where>
            is_valid = 1
            <if test="qc.permissionName != null and qc.permissionName != ''">
                and permission_name = #{qc.permissionName}
            </if>
            <if test="qc.resourceType != null and qc.resourceType != ''">
                and resource_type = #{qc.resourceType}
            </if>
            <if test="qc.permissionValue != null and qc.permissionValue != ''">
                and permission_value = #{qc.permissionValue}
            </if>
            <if test="qc.icon != null and qc.icon != ''">
                and icon = #{qc.icon}
            </if>
            <if test="qc.url != null and qc.url != ''">
                and url = #{qc.url}
            </if>
            <if test="qc.id != null">
                and id = #{qc.id}
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                and creator = #{qc.creator}
            </if>
            <if test="qc.createTime != null">
                and create_time = #{qc.createTime}
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                and updator = #{qc.updator}
            </if>
            <if test="qc.updateTime != null">
                and update_time = #{qc.updateTime}
            </if>
            <if test="qc.isValid != null">
                and is_valid = #{qc.isValid}
            </if>
        </where>
    </sql>

    <!--更新字段sql-->
    <sql id="updateFields">
        <set>
            <if test="qc.permissionName != null and qc.permissionName != ''">
                permission_name = #{qc.permissionName},
            </if>
            <if test="qc.resourceType != null and qc.resourceType != ''">
                resource_type = #{qc.resourceType},
            </if>
            <if test="qc.permissionValue != null and qc.permissionValue != ''">
                permission_value = #{qc.permissionValue},
            </if>
            <if test="qc.icon != null and qc.icon != ''">
                icon = #{qc.icon},
            </if>
            <if test="qc.url != null and qc.url != ''">
                url = #{qc.url},
            </if>
            <if test="qc.id != null">
                id = #{qc.id},
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                creator = #{qc.creator},
            </if>
            <if test="qc.createTime != null">
                create_time = #{qc.createTime},
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                updator = #{qc.updator},
            </if>
            <if test="qc.updateTime != null">
                update_time = #{qc.updateTime},
            </if>
            <if test="qc.isValid != null">
                is_valid = #{qc.isValid},
            </if>
        </set>
    </sql>

</mapper>
