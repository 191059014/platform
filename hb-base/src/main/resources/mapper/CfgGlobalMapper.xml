<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hb.platform.hbbase.dao.mapper.ICfgGlobalMapper">

    <!--字段映射-->
    <resultMap id="cfgGlobalMap" type="com.hb.platform.hbbase.dao.dobj.CfgGlobalDO">
        <result column="system_name" property="systemName"/>
        <result column="group_name" property="groupName"/>
        <result column="config_key" property="configKey"/>
        <result column="config_value" property="configValue"/>
        <result column="remark" property="remark"/>
        <result column="id" property="id"/>
        <result column="creator" property="creator"/>
        <result column="create_time" property="createTime"/>
        <result column="updator" property="updator"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_valid" property="isValid"/>
    </resultMap>

    <!--查询单个-->
    <select id="selectById" resultMap="cfgGlobalMap">
        select * from cfg_global where id = #{id}
    </select>

    <!--查询集合-->
    <select id="selectList" resultMap="cfgGlobalMap">
        select * from cfg_global
        <include refid="whereCondition"/>
        order by update_time desc
    </select>

    <!--查询总条数-->
    <select id="selectCount" resultType="java.lang.Long">
        select count(*) from cfg_global
        <include refid="whereCondition"/>
    </select>

    <!--分页条件查询-->
    <select id="selectPages" resultMap="cfgGlobalMap">
        select * from cfg_global
        <include refid="whereCondition"/>
        order by update_time desc
        limit #{pc.startIndex}, #{pc.pageSize}
    </select>

    <!--通过id集合查询-->
    <select id="selectByIdSet" resultMap="cfgGlobalMap">
        select * from cfg_global
        where id in
        <foreach collection="idSet" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        <include refid="whereCondition"/>
    </select>

    <!--通过主键修改-->
    <update id="updateById">
        update cfg_global
        <include refid="updateFields"/>
        where id = #{qc.id}
    </update>

    <!--通过主键物理删除-->
    <update id="deleteById">
        update cfg_global set is_valid = 0 where id = #{id}
    </update>

    <!--选择性的新增-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into cfg_global
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="qc.systemName != null and qc.systemName != ''">
                system_name,
            </if>
            <if test="qc.groupName != null and qc.groupName != ''">
                group_name,
            </if>
            <if test="qc.configKey != null and qc.configKey != ''">
                config_key,
            </if>
            <if test="qc.configValue != null and qc.configValue != ''">
                config_value,
            </if>
            <if test="qc.remark != null and qc.remark != ''">
                remark,
            </if>
            <if test="qc.id != null">
                id,
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                creator,
            </if>
            <if test="qc.createTime != null">
                create_time,
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                updator,
            </if>
            <if test="qc.updateTime != null">
                update_time,
            </if>
            <if test="qc.isValid != null">
                is_valid,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="qc.systemName != null and qc.systemName != ''">
                #{qc.systemName},
            </if>
            <if test="qc.groupName != null and qc.groupName != ''">
                #{qc.groupName},
            </if>
            <if test="qc.configKey != null and qc.configKey != ''">
                #{qc.configKey},
            </if>
            <if test="qc.configValue != null and qc.configValue != ''">
                #{qc.configValue},
            </if>
            <if test="qc.remark != null and qc.remark != ''">
                #{qc.remark},
            </if>
            <if test="qc.id != null">
                #{qc.id},
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                #{qc.creator},
            </if>
            <if test="qc.createTime != null">
                #{qc.createTime},
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                #{qc.updator},
            </if>
            <if test="qc.updateTime != null">
                #{qc.updateTime},
            </if>
            <if test="qc.isValid != null">
                #{qc.isValid},
            </if>
        </trim>
    </insert>

    <!--条件查询-->
    <sql id="whereCondition">
        <where>
            is_valid = 1
            <if test="qc.systemName != null and qc.systemName != ''">
                and system_name = #{qc.systemName}
            </if>
            <if test="qc.groupName != null and qc.groupName != ''">
                and group_name = #{qc.groupName}
            </if>
            <if test="qc.configKey != null and qc.configKey != ''">
                and config_key = #{qc.configKey}
            </if>
            <if test="qc.configValue != null and qc.configValue != ''">
                and config_value = #{qc.configValue}
            </if>
            <if test="qc.remark != null and qc.remark != ''">
                and remark = #{qc.remark}
            </if>
            <if test="qc.id != null">
                and id = #{qc.id}
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                and creator = #{qc.creator}
            </if>
            <if test="qc.createTime != null">
                and create_time = #{qc.createTime}
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                and updator = #{qc.updator}
            </if>
            <if test="qc.updateTime != null">
                and update_time = #{qc.updateTime}
            </if>
            <if test="qc.isValid != null">
                and is_valid = #{qc.isValid}
            </if>
        </where>
    </sql>

    <!--更新字段sql-->
    <sql id="updateFields">
        <set>
            <if test="qc.systemName != null and qc.systemName != ''">
                system_name = #{qc.systemName},
            </if>
            <if test="qc.groupName != null and qc.groupName != ''">
                group_name = #{qc.groupName},
            </if>
            <if test="qc.configKey != null and qc.configKey != ''">
                config_key = #{qc.configKey},
            </if>
            <if test="qc.configValue != null and qc.configValue != ''">
                config_value = #{qc.configValue},
            </if>
            <if test="qc.remark != null and qc.remark != ''">
                remark = #{qc.remark},
            </if>
            <if test="qc.id != null">
                id = #{qc.id},
            </if>
            <if test="qc.creator != null and qc.creator != ''">
                creator = #{qc.creator},
            </if>
            <if test="qc.createTime != null">
                create_time = #{qc.createTime},
            </if>
            <if test="qc.updator != null and qc.updator != ''">
                updator = #{qc.updator},
            </if>
            <if test="qc.updateTime != null">
                update_time = #{qc.updateTime},
            </if>
            <if test="qc.isValid != null">
                is_valid = #{qc.isValid},
            </if>
        </set>
    </sql>

</mapper>
